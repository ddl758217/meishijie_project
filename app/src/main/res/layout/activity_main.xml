<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ddl.dalong.com.meishijie_project.MainActivity">

    <LinearLayout
        android:id="@+id/ll_fragment_main"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/v_line"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rg_button"
        android:background="@android:color/darker_gray"
        />

    <RadioGroup
        android:id="@+id/rg_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_recommend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/recomment_select_bg"
            android:background="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/rb_text_bg"
            android:text="推荐"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_discover"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/discover_select_bg"
            android:textSize="13sp"
            android:textColor="@color/rb_text_bg"
            android:text="发现"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_store"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/shop_select_bg"
            android:textSize="13sp"
            android:textColor="@color/rb_text_bg"
            android:text="商城"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_shihua"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/topic_select_bg"
            android:textSize="13sp"
            android:textColor="@color/rb_text_bg"
            android:text="食话"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/wode_select_bg"
            android:textSize="13sp"
            android:textColor="@color/rb_text_bg"
            android:text="我的"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    </RadioGroup>

</RelativeLayout>
