<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ddl.dalong.com.meishijie_project.ui.TopdetailObjActivity">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl__obj_toolBar"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageButton
                android:id="@+id/ib_obj_back"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_closed_red"/>

            <ImageView
                android:id="@+id/iv_obj_shopping"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_obj_toolbatr_genxin"
                android:src="@drawable/master_goods"/>

            <ImageView
                android:id="@+id/iv_obj_toolbatr_genxin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="3dp"
                android:src="@drawable/icon_share_red"/>
        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/rl__obj_toolBar"
            android:id="@+id/scrollView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appbar_view">
                <android.support.design.widget.CollapsingToolbarLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    app:contentScrim="#ff0"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/ll_obj_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_header_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <LinearLayout
                        android:id="@+id/ll_indtor_dots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="40dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/indator_dots"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/indator_dots"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/indator_dots"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/indator_dots"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_total_store"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/xiazai_shape"
                            android:gravity="center"
                            android:text="仅限50份"/>
                        <TextView
                            android:id="@+id/tv_store"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:background="#55f5f5f5"
                            android:gravity="center"
                            android:text="0份已经被抢走，尽剩50份"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ttttt"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="300dp">
                    <TextView
                        android:id="@+id/tv_obj_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:text="恒温发酵90天丨葱伴侣6月香豆瓣酱300g×2盒"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tv_obj_descr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_obj_title"
                        android:layout_marginTop="3dp"
                        android:padding="5dp"
                        android:text="六月香 只做原酿酱"/>

                    <TextView
                        android:id="@+id/tv_obj_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_obj_descr"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="13"
                        android:textColor="#ff0000"
                        android:textSize="25dp"/>

                    <TextView
                        android:id="@+id/tv_obj_guige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_obj_descr"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/tv_obj_price"
                        android:text="2盒"/>

                    <TextView
                        android:id="@+id/tv_obj_postage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_obj_price"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:text="邮费 ￥8"/>
                </RelativeLayout>
                    </RelativeLayout>

                </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


            <LinearLayout
                android:layout_below="@id/appbar_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/rl__obj_toolBar"
                android:layout_marginTop="5dp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="4500dp"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
