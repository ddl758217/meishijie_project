<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f5f5f5"
             tools:context="ddl.dalong.com.meishijie_project.fragment.StoreFragment">
        <RelativeLayout
            android:id="@+id/rl_toolBar"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_toolbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/my_order_icon"/>
            <RelativeLayout
                android:id="@+id/rl_toolbar_et"
                android:layout_toRightOf="@id/iv_toolbar"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:background="#F5F5F5"
                android:padding="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >
                <LinearLayout
                    android:id="@+id/layout_default"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="150dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/iv_default"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/search_46" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="榨汁机" />
                </LinearLayout>
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ImageView
                android:layout_toLeftOf="@+id/iv_tool_toolbatr_xinjian"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/shopcart_home"/>
            <ImageView
                android:id="@+id/iv_tool_toolbatr_xinjian"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/tj_msg"/>
        </RelativeLayout>
        <com.zyx.group14.android1603.meishilibrary.MeiShiListView
            android:id="@+id/pullList_category"
            android:layout_below="@id/rl_toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>
