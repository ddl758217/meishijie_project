<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp">

        <ImageView
            android:id="@+id/iv_mine_softs_icon"
            android:padding="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_mine_softs_name"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/iv_mine_softs_icon"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食材组菜"/>
        <TextView
            android:id="@+id/tv_mine_softs_desc"
            android:layout_toRightOf="@id/iv_mine_softs_icon"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="把手头的食材变成美味"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/xiazai_shape"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="下载"/>

</RelativeLayout>