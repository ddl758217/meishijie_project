<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="5dp"
              android:layout_height="150dp">

        <android.support.v7.widget.CardView
            android:id="@+id/Cardview_more"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/iv_more_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/ic_launcher"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_toRightOf="@id/Cardview_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_more_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="让方便面都能吃出川味 | 麻辣重庆小面调料 300g"/>

            <TextView
                android:id="@+id/tv_more_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textColor="#ff0000"
                android:textSize="24sp"
                android:text="19.8"/>

            <TextView
                android:layout_toRightOf="@+id/tv_more_price"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="103dp"
                android:id="@+id/tv_more_market_price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="26.8"/>

            <Button
                android:id="@+id/btn_more_des"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="95dp"
                android:gravity="center"
                android:background="@drawable/shape_gift_listview"
                android:textColor="#ffffff"
                android:text="已结束"/>


        </RelativeLayout>



</RelativeLayout>