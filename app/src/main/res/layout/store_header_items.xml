<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_header_store_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_store_header_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/cb_header_store_view"
        android:layout_alignParentStart="true"/>
    <View
        android:id="@+id/vvv_one"
        android:layout_below="@id/rv_store_header_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#D7E7F2"/>
    <RelativeLayout
      android:layout_below="@id/vvv_one"
      android:layout_marginTop="2dp"
      android:layout_width="match_parent"
      android:layout_height="200dp">
        <RelativeLayout
            android:id="@+id/rl_category_biaoti"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <View
                android:id="@+id/v_category_line"
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:background="#ff0000"/>
            <TextView
                android:layout_toRightOf="@id/v_category_line"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="为您优先好物"/>
            <ImageView
                android:id="@+id/iv_category_jiantou"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/go_red"/>
            <TextView
                android:layout_toLeftOf="@+id/iv_category_jiantou"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:text="更多"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_data"
            android:layout_below="@id/rl_category_biaoti"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>
        <View
            android:layout_below="@id/recycle_data"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#D7E7F2"/>
    </RelativeLayout>
</RelativeLayout>