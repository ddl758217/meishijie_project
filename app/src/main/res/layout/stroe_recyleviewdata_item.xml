<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_datas"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="160dp">

    <ImageView
        android:id="@+id/iv_data_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_data_title"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="8dp"
        android:text="吃一包还想囤100| 厨领地外婆菜 250g/包"/>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_datas_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥9.9"
                android:textSize="10sp"
                android:textColor="#ff0000"/>
            <TextView
                android:id="@+id/tv_data_store"
                android:layout_toRightOf="@id/tv_datas_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:textSize="5dp"
                android:textColor="#ff0000"
                android:text="剩余29件"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>